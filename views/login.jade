extends ./layout.jade

block content
  .formbox
    form(action="login" method="post")
      .form-group
        label(for="username")
          | Username
        input.form-control#username(name="username" type="text")

      .form-group
        label(for="password")
          | Password
        input.form-control#password(name="password" type="password")

      button.btn.btn-default(type="submit")
        | Submit
