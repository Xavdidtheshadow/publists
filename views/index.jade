doctype html
html(lang="en")
  head
    title Publists
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')

  body(ng-app="publists")
    .container(ng-controller="MainController")
      h1 Publists 
        small Public Wunderlists
      p
        | These are your lists. Check the ones you'd like to make public! 
        
      ul(style="list-style-type: none")
        li(ng-repeat="list in lists")
          input(type="checkbox" ng-model="model[list.id]")
          span
            | 
          a(href="/lists/{{list.id}}/tasks")
            | {{list.title}}

    script(src="/public/_bundle.js")
        